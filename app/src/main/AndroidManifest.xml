<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.com.devare.coppelstore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- SplashScreen -->
        <activity
            android:name=".controlador.splash_screen.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- TerminosYCondiciones -->
        <activity
            android:name=".controlador.activitys.TerminosYCondiciones"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- LoginActivity -->
        <activity
            android:name=".controlador.activitys.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controlador.activitys.RegistroActivity"
            android:label="@string/label_registro" />
        <activity android:name=".controlador.activitys.MainActivity">


        </activity>
    </application>

</manifest>